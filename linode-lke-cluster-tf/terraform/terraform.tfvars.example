# Linode API Token
# Get your API token from: https://cloud.linode.com/profile/tokens
linode_token = "your-linode-api-token-here"

# Cluster Configuration
cluster_label = "my-lke-cluster"
k8s_version   = "1.28"
region        = "us-east"

# Tags for resource organization
tags = [
  "terraform",
  "lke",
  "kubernetes",
  "production"
]

# Node Pools Configuration
# You can define multiple node pools for different workloads
node_pools = [
  {
    type  = "g6-standard-1"  # 1 CPU, 2GB RAM
    count = 3
    tags  = ["worker", "general"]
  },
  {
    type  = "g6-standard-2"  # 2 CPU, 4GB RAM
    count = 2
    tags  = ["worker", "high-performance"]
  }
]

# Optional: Enable cluster autoscaler
enable_autoscaler = false

# Optional: Enable Kubernetes dashboard
enable_dashboard = true

# Optional: Enable monitoring
enable_monitoring = true

# Optional: Enable private IP
private_ip = false

# Optional: Enable high availability
high_availability = true
